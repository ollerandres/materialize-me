<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.andevcba.materializeme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.drawer_pattern.NavigationDrawerActivity"
            android:label="@string/navigation_drawer_pattern"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".presentation.tab_pattern.TabNavigationActivity"
            android:label="@string/tab_navigation_pattern"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".presentation.bottom_pattern.BottomNavigationActivity"
            android:label="@string/bottom_navigation_pattern">
        </activity>
        <activity
            android:name=".presentation.settings.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".presentation.main.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.embedded.EmbeddedNavigationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_embedded_navigation"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".presentation.gestural.GesturalNavigationActivity"
            android:label="@string/title_activity_gestural_navigation"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>